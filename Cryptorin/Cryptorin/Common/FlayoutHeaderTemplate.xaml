<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cryptorin.Common.FlayoutHeaderTemplate"
      BackgroundColor="{DynamicResource colorMainAccent}">
    
    
    <StackLayout Padding="0,20,0,10" Margin="0,0,0,30" BackgroundColor="Transparent" Orientation="Vertical">

        <Frame Padding="0"
                   HeightRequest="150"
                   WidthRequest="150"
                   HorizontalOptions="Center"
                   IsClippedToBounds="True"
                   CornerRadius="100"
               BackgroundColor="#3C3C3C">
            <Image x:Name="myPhoto" Aspect="Fill"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"></Image>
        </Frame>
        <Label x:Name="lblId" HorizontalOptions="Center" Margin="10" Text="#0000" FontSize="Medium"></Label>
        <Label x:Name="lblPublicName" Margin="3" HorizontalOptions="Center" FontSize="30">???</Label>
    </StackLayout>
</Grid>