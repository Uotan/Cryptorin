<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cryptorin.Common.FlayoutHeaderTemplate"
      BackgroundColor="{DynamicResource colorMainAccent}">
    
    
    <StackLayout Padding="20" Margin="0,0,0,60" BackgroundColor="Transparent" Orientation="Vertical">

        <Frame x:Name="frameTamplate" Padding="0"
                   HeightRequest="150"
                   WidthRequest="150"
                   HorizontalOptions="Center"
                   IsClippedToBounds="True"
                   CornerRadius="100">
            <Image x:Name="myPhoto" Aspect="Fill"
                       HorizontalOptions="Center"
                   BackgroundColor="#6b6a68"
                       VerticalOptions="Center"></Image>
        </Frame>
        <Label x:Name="lblId" HorizontalOptions="Center" Text="#0000" FontSize="Small"></Label>
        <Label x:Name="lblPublicName" Margin="10" HorizontalOptions="Center" FontSize="Medium">???</Label>
    </StackLayout>
</Grid>