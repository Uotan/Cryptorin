<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cryptorin.Views.ViewAuth"
             Style="{StaticResource cntPageColor}">

    <StackLayout>
        <Frame HeightRequest="125" Style="{StaticResource styleFrame}" Padding="5,0,5,30" CornerRadius="0">
            <Image Source="CryptorinLogo.png"></Image>
        </Frame>

        <StackLayout Padding="15,70,15,20" Orientation="Vertical" Spacing="10" VerticalOptions="Center">
            <Entry x:Name="tbLogin" Margin="0,0,0,20" HorizontalTextAlignment="Center"  Placeholder="Enter login" />
            <Entry x:Name="tbPassword" HorizontalTextAlignment="Center" Placeholder="Enter password" IsPassword="True"/>
            <Button x:Name="btnSignIn" Margin="0,50,0,0" Text="Sign In" Clicked="btnSignIn_Clicked"/>
            <Label Text="or" FontSize="Medium" HorizontalTextAlignment="Center"></Label>
            <Button x:Name="btnSignUp" Text="Sign Up" Clicked="btnSignUp_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>